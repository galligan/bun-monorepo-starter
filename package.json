{
  "name": "bun-monorepo-starter",
  "version": "1.0.0",
  "description": "A modern TypeScript monorepo starter template with Bun, Turbo, and Ultracite",
  "type": "module",
  "private": true,
  "keywords": [
    "monorepo",
    "bun",
    "typescript",
    "turbo",
    "template",
    "starter"
  ],
  "author": "Matt Galligan <matt.galligan@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/galligan/bun-monorepo-starter.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "test:ci": "turbo test --concurrency=1",
    "format": "bun x ultracite@latest format",
    "lint": "bun x ultracite@latest lint && bun run lint:md",
    "lint:fix": "bun x ultracite@latest lint --write && bun run lint:md:fix",
    "lint:md": "markdownlint-cli2 \"**/*.{md,mdx,mdc}\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.{md,mdx,mdc}\"",
    "lint:packages": "publint",
    "typecheck": "turbo typecheck",
    "typecheck:all": "tsc --noEmit",
    "ci:full": "bun run lint && bun run typecheck && bun run test:ci && bun run build",
    "setup:tests": "bun scripts/setup-tests.ts",
    "format:check": "bun x ultracite@latest lint",
    "prepare": "lefthook install",
    "lefthook:run": "lefthook run"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/bun": "^1.2.19",
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^3.2.4",
    "lefthook": "^1.12.2",
    "markdownlint-cli2": "^0.18.1",
    "publint": "^0.3.12",
    "syncpack": "^14.0.0-alpha.18",
    "turbo": "^2.3.3",
    "type-fest": "^4.41.0",
    "typedoc": "^0.28.7",
    "typescript": "^5.7.2",
    "ultracite": "5.1.1",
    "vitest": "^3.2.4"
  },
  "packageManager": "bun@1.1.44"
}
